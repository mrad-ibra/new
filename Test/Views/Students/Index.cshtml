@model IEnumerable<Student>
@{
    ViewData["Title"] = "Index";
}
<h1>Tələbələr</h1>
<a asp-action="create" class="btn btn-outline-primary">Yeni Tələbə</a>
<table class="table tabletable-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Qrup</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Group.Name</td>
                <td>
                    <a asp-action="edit" asp-route-id="@item.Id">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a> 
                    <a class="text-danger" asp-action="delete" onclick="return confirm('Eminsiniz mi?')" asp-route-id="@item.Id">
                       <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>